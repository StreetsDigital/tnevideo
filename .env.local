# Local Development - Minimal Configuration
PBS_HOST_URL=http://localhost:8000
PBS_PORT=8000

# Database - Optional (server will run without it)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=
DB_USER=
DB_PASSWORD=

# Redis - Optional (server will run without it)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# IDR - Disabled for local testing
IDR_ENABLED=false

# IVT - Monitoring only
IVT_BLOCKING_ENABLED=false

# CORS - Permissive for local dev
CORS_ALLOWED_ORIGINS=*

# Auction Settings
AUCTION_TIMEOUT=2s
AUCTION_MAX_BIDDERS=10
AUCTION_PARALLEL_BIDDING=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=text
LOG_REQUESTS=true

# Debug
DEBUG_ENDPOINTS=true
PPROF_ENABLED=true
